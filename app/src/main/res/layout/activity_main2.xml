<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/walpaper1">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_below="@id/App_name"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:baselineAlignBottom="true"
        android:paddingBottom="@dimen/cardview_default_radius"
        android:src="@drawable/applog">
    </ImageView>
    <TextView
        android:id="@+id/App_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Ali Gold Smith"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="0dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/textshape"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:hint="  Enter your Email"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="30dp">

    </EditText>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/textshape"
        android:drawableLeft="@drawable/ic_user1"
        android:hint="  Enter your username  "
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="30dp">
    </EditText>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/textshape"
        android:drawableLeft="@drawable/ic_password"
        android:hint="  Enter your Password  "
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="30dp">
    </EditText>
    <EditText
        android:id="@+id/confrm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/textshape"
        android:drawableLeft="@drawable/ic_password"
        android:hint="  Conform Password  "
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="30dp">
    </EditText>
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confrm"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttunshape"
        android:text="  Submit  "
        android:textColor="@color/white"
        android:textSize="30sp">
    </Button>
    <TextView
        android:id="@+id/acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="You have an account "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@id/submit">
    </TextView>
    <Button
        android:id="@+id/Signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Sign In Here "
        android:layout_below="@+id/acc"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/buttunshape"
        android:textColor="@color/white">
    </Button>

</RelativeLayout>